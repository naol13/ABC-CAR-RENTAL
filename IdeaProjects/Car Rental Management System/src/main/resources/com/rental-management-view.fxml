<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalmanagementsystem.controller.RentalManagementController"
            stylesheets="@style.css">
    <top>
        <Label text="Rental Management" styleClass="h1" style="-fx-padding: 10;" />
    </top>
    <center>
        <TableView fx:id="rentalTableView">
            <columns>
                <TableColumn fx:id="carInfoColumn" text="Car" />
                <TableColumn fx:id="customerInfoColumn" text="Customer" />
                <TableColumn fx:id="contactColumn" text="Contact" />
                <TableColumn fx:id="licenseColumn" text="License" />
                <TableColumn fx:id="rentalDateColumn" text="Rental Date" />
                <TableColumn fx:id="returnDateColumn" text="Return Date" />
                <TableColumn fx:id="statusColumn" text="Status" />
                <TableColumn fx:id="actionColumn" text="Action" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <!-- Buttons are now dynamically added in the 'Action' column -->
        </HBox>
    </bottom>
</BorderPane>
