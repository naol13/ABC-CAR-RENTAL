<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalmanagementsystem.controller.InitiateRentalController" styleClass="root"
            stylesheets="@style.css"> <!-- Added stylesheet reference -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <left>
        <VBox spacing="20" prefWidth="600">
            <Label text="Initiate New Rental" styleClass="h1"/>

            <!-- 1. Customer Details -->
            <VBox spacing="10" styleClass="form-section">
                <Label text="1. Customer Details" styleClass="label-bold"/>
                <TextField fx:id="customerSearchField" promptText="Search for customer by name, email, or phone..."/>
                <ListView fx:id="customerListView" prefHeight="100"/>
                <Label fx:id="selectedCustomerLabel" styleClass="label"/>
            </VBox>

            <!-- 2. Car Selection -->
            <VBox spacing="10" styleClass="form-section">
                <Label text="2. Car Selection" styleClass="label-bold"/>
                <TextField fx:id="carSearchField" promptText="Search for available car by make or model..."/>
                <ListView fx:id="carListView" prefHeight="100"/>
                <Label fx:id="selectedCarLabel" styleClass="label"/>
            </VBox>

            <!-- 3. Rental Period -->
            <VBox spacing="10" styleClass="form-section">
                <Label text="3. Rental Period" styleClass="label-bold"/>
                <GridPane hgap="10" vgap="10">
                    <Label text="Start Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="startDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="End Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="endDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
                <Label fx:id="durationLabel" styleClass="label"/>
            </VBox>

            <!-- 4. Extra Services & Discounts -->
            <VBox spacing="10" styleClass="form-section">
                <Label text="4. Extra Services &amp; Discounts" styleClass="label-bold"/>
                <HBox spacing="20">
                    <CheckBox fx:id="gpsCheckBox" text="GPS Navigation"/>
                    <CheckBox fx:id="childSeatCheckBox" text="Child Seat"/>
                    <CheckBox fx:id="insuranceCheckBox" text="Premium Insurance"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Discount Code:"/>
                    <TextField fx:id="discountField" promptText="Enter code"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <right>
        <VBox spacing="20" prefWidth="300" styleClass="dashboard-card">
            <Label text="Rental Summary" styleClass="h1"/>
            
            <!-- Rental Summary -->
            <VBox fx:id="rentalSummaryBox" spacing="5">
                <!-- Dynamically populated -->
            </VBox>
            
            <Label text="Payment Details" styleClass="label-bold" />
            
            <!-- Payment Details -->
            <GridPane hgap="10" vgap="10">
                <Label text="Total Amount:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label-bold"/>
                <Label fx:id="totalAmountLabel" text="\$0.00" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="value-label"/>
                
                <Label text="Amount Paid:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="amountPaidField" text="0.00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <VBox VBox.vgrow="ALWAYS"/> <!-- Spacer -->

            <Button fx:id="processPaymentButton" text="Process Payment" onAction="#handleProcessPayment" maxWidth="Infinity" styleClass="quick-action-button"/>
        </VBox>
    </right>
</BorderPane>
