<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalmanagementsystem.controller.MaintenanceManagementController"
            stylesheets="@style.css"> <!-- Added stylesheet reference -->
    <top>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="Maintenance Management" styleClass="h1"/>
            <!-- Removed description label -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Add New Maintenance Record" onAction="#handleAddNewMaintenance"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="maintenanceTableView" prefHeight="Infinity" prefWidth="Infinity">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="carIdColumn" text="Car ID"/>
                <TableColumn fx:id="startDateColumn" text="Start Date"/>
                <TableColumn fx:id="endDateColumn" text="End Date"/>
                <TableColumn fx:id="descriptionColumn" text="Description"/>
                <TableColumn fx:id="costColumn" text="Cost"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
