<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalmanagementsystem.controller.GPSTrackerController" stylesheets="@style.css">
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15;">
            <Label text="GPS Tracking" styleClass="h1"/>
            <Label text="Select Car:" styleClass="label"/>
            <ComboBox fx:id="activeRentalsComboBox" prefWidth="200" promptText="Select Active Rental"/>
            <Button text="Refresh Location" onAction="#handleRefreshLocation" styleClass="button"/>
            <Button text="Show All Active Cars" onAction="#handleShowAllLocations" styleClass="button"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <HBox spacing="20" styleClass="dashboard-card">
                <VBox spacing="5">
                    <Label text="Current Status" styleClass="label-bold"/>
                    <Label fx:id="statusLabel" text="Unknown" styleClass="label"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Speed" styleClass="label-bold"/>
                    <Label fx:id="speedLabel" text="0 km/h" styleClass="label"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Last Updated" styleClass="label-bold"/>
                    <Label fx:id="timestampLabel" text="-" styleClass="label"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Coordinates" styleClass="label-bold"/>
                    <Label fx:id="coordinatesLabel" text="-" styleClass="label"/>
                </VBox>
            </HBox>
            <WebView fx:id="mapWebView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
</BorderPane>
