<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalmanagementsystem.controller.CustomerRentalsController" stylesheets="@style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="My Active Rentals">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <TableView fx:id="rentalsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="carMakeColumn" text="Make" prefWidth="100.0" />
            <TableColumn fx:id="carModelColumn" text="Model" prefWidth="100.0" />
            <TableColumn fx:id="rentalDateColumn" text="Rental Date" prefWidth="100.0" />
            <TableColumn fx:id="dailyRateColumn" text="Daily Rate" prefWidth="100.0" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Button fx:id="returnButton" text="Return Selected Car" onAction="#handleReturnCar" disable="true" />
    <Button text="Close" onAction="#handleClose" />

</VBox>
