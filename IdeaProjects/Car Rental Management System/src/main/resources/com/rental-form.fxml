<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalmanagementsystem.controller.RentalFormController"
          hgap="10" vgap="10" style="-fx-padding: 20;"
          stylesheets="@style.css"> <!-- Added stylesheet reference -->
    <children>
        <Label text="Car:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <ComboBox fx:id="carComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Customer:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <ComboBox fx:id="customerComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Rental Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <DatePicker fx:id="rentalDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Button text="Save" onAction="#handleSave" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    </children>
</GridPane>